@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
</head>
<body>

    <div class="container">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a>
            </li>
            @if (hasExternalLogins)
            {
                <li id="external-logins" class="nav-item">
                    <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a>
            </li>
        </ul>
    </div>

</body>
</html>
 <!-- Intégration du CSS directement dans le fichier HTML -->
    <style>
        html {
            font-size: 14px;
        }

       

        /* Global page styling */
        body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
            background-color: #f0f4f8; /* Fond très clair */
        }

        /* Form container styling */
        .form-container {
            background-color: white; /* Fond blanc pour le formulaire */
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            animation: fadeIn 1.5s ease-in-out;
            border-radius: 15px; /* Bords arrondis */
            margin-top: -80px; /* Formulaire un peu plus centré vers le haut */
            padding: 30px; /* Ajouter un peu d'espace autour du contenu */
            transition: transform 0.5s ease;
        }

        .form-container:hover {
            transform: translateY(-10px); /* Animation dynamique du formulaire */
        }

        /* Animation for the form */
       

        /* Button styling */
        .custom-btn {
            background-color: #ff6f61; /* Couleur de fond du bouton rouge corail */
            color: #fff;
            border-radius: 50px;
            transition: transform 0.3s ease, background-color 0.3s ease;
            font-weight: bold;
            padding: 12px 0;
        }

        .custom-btn:hover {
            transform: scale(1.1); /* Agrandissement du bouton au survol */
            background-color: #e74c3c; /* Rouge foncé au survol */
            color: #fff; /* Le texte reste blanc au survol */
        }

        /* Links */
        a {
            color: darkgray; /* Bleu pour les liens */
            transition: color 0.3s ease;
        }

        a:hover {
            color: #e74c3c; /* Rouge vif au survol */
        }

        /* Navbar styling */
        .nav-pills .nav-item .nav-link {
            color: darkgray;  /* Texte gris pour les liens */
            font-size: 16px;
            font-weight: 600; /* Texte en gras */
            padding: 10px;
            border-radius: 5px; /* Bords arrondis des liens */
            transition: color 0.3s ease, background-color 0.3s ease;
        }

        .nav-pills .nav-item .nav-link:hover {
            background-color: #f5f5f5;  /* Fond clair au survol */
            color: #ff6f61;  /* Couleur du texte au survol */
        }

        .nav-pills .nav-item.active .nav-link {
            background-color: #ff6f61; /* Fond rouge pour la page active */
            color: white;  /* Texte en blanc */
        }
    </style>