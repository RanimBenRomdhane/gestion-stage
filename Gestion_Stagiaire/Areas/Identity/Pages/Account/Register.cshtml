@page
@model RegisterModel
@{
    ViewData["Title"] = "Créer un compte";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Lien vers votre fichier CSS -->
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <div class="d-flex justify-content-center align-items-center min-vh-100 bg-gradient">
        <div class="col-md-5">
            <section class="form-container">
                <h1 class="text-center title-text">@ViewData["Title"]</h1>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Email Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control custom-input" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-dark">Adresse e-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control custom-input" autocomplete="new-password" placeholder="Mot de passe" />
                        <label asp-for="Input.Password" class="text-dark">Mot de passe</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control custom-input" autocomplete="new-password" placeholder="Confirmez le mot de passe" />
                        <label asp-for="Input.ConfirmPassword" class="text-dark">Confirmez le mot de passe</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg custom-btn">Créer un compte</button>
                    </div>

                    <!-- Additional Links -->
                    <div class="text-center mt-4">
                        <p>
                            Vous avez déjà un compte ?
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="link">Connectez-vous</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
