@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Mot de passe oublié ?";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
        <div class="col-md-5">
            <section class="form-container">
                <h1 class="text-center title-text">@ViewData["Title"]</h1>
                <h2 class="text-center subtitle-text">Entrez votre email</h2>
                <hr />
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control custom-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-dark">Adresse e-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-lg custom-btn">Réinitialiser le mot de passe</button>
                </form>
            </section>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

<!-- CSS à la fin du fichier -->
<style>
    /* Global page styling */
    html {
        font-size: 14px;
    }

    body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
        background-color: #f0f4f8; /* Fond très clair */
    }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }

    .align-items-center {
        align-items: center;
    }

    .min-vh-100 {
        min-height: 100vh;
    }

    .bg-light {
        background-color: #f8f9fa;
    }

    /* Form container styling */
    .form-container {
        background-color: white; /* Fond blanc pour le formulaire */
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1.5s ease-in-out;
        border-radius: 15px;
        padding: 30px;
        margin-top: -50px;
        transition: transform 0.5s ease;
    }

        .form-container:hover {
            transform: translateY(-10px);
        }

    /* Title styling */
    .title-text {
        color: #2c3e50;
        font-weight: bold;
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 1rem;
        transition: color 0.3s ease;
    }

    /* Subtitle styling */
    .subtitle-text {
        color: #7f8c8d;
        font-weight: 500;
        font-size: 1.5rem;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    /* Input styles */
    .custom-input {
        background-color: #ffffff;
        border: 1px solid #dcdcdc;
        padding: 15px;
        border-radius: 10px;
        color: darkgray;
    }

        .custom-input:hover {
            background-color: #f5f5f5;
            border: 1px solid #3498db;
        }

    /* Button styles */
    .custom-btn {
        background-color: indianred;
        color: #fff;
        border-radius: 50px;
        transition: transform 0.3s ease, background-color 0.3s ease;
        font-weight: bold;
        padding: 12px 0;
    }

        .custom-btn:hover {
            transform: scale(1.1);
            background-color: #c0392b;
            color: #fff;
        }

    /* Links */
    a {
        color: darkgray;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #e74c3c;
        }

    /* Validation error text */
    .text-danger {
        color: #e74c3c;
    }
</style>
