@model Gestion_Stagiaires.Models.Stagiaire

@{
    ViewData["Title"] = "Delete";
}

<h1 class="page-title">Supprimer</h1>

<div class="stagiaire-container">
    <div class="stagiaire-card">
        <!-- Photo dans le coin gauche -->
        @if (!string.IsNullOrEmpty(Model.Path_Photo))
        {
            <img src="~/uploads/photos/@Model.Path_Photo?timestamp=@DateTime.Now.Ticks" alt="Photo de @Model.Nom"
                 class="stagiaire-photo" />
        }
        else
        {
            <div class="stagiaire-photo placeholder-photo text-center d-flex align-items-center justify-content-center bg-light">
                <i class="fas fa-user-circle fa-3x text-secondary"></i>
            </div>
        }

        <!-- Contenu à droite -->
        <div class="card-body">
            <h5 class="card-title">@Model.Nom @Model.Prenom</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>CIN:</strong> @Model.Cin</li>
                <li class="list-group-item"><strong>Téléphone:</strong> @Model.Telephone</li>
                <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                <li class="list-group-item"><strong>École:</strong> @Model.Ecole</li>
                <li class="list-group-item"><strong>CV:</strong> 
                    @if (!string.IsNullOrEmpty(Model.Path_CV))
                    {
                        <a href="~/uploads/cvs/@Model.Path_CV?timestamp=@DateTime.Now.Ticks" target="_blank">Voir le CV</a>
                    }
                    else
                    {
                        <span>Aucun CV disponible</span>
                    }
                </li>
            </ul>
        </div>

        <!-- Bouton Supprimer centré en bas -->
        <form asp-action="Delete" class="form-buttons">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="delete-icon" title="Supprimer">
                <i class="fas fa-trash"></i>
            </button>
        </form>
    </div>

    <!-- Bouton Retour centré sous la carte -->
    <div class="back-button-wrapper">
        <a asp-action="Index" class="back-button">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>
<style>
    .stagiaire-container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 30px;
    padding: 40px;
    min-height: 100vh;
}

.stagiaire-card {
    position: relative;
    display: flex;
    flex-direction: column; /* Empile les éléments verticalement */
    align-items: center; /* Centre le contenu de la carte */
    min-width: 700px;
    max-width: fit-content;
    border-radius: 15px;
    overflow: hidden;
    background: #fff;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    padding: 20px;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Assure que le contenu prend tout l'espace disponible */
}

.stagiaire-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
}

.stagiaire-photo {
    width: 150px;
    height: 150px;
    object-fit: cover;
    border-radius: 50%;
    margin-right: 20px;
    position: absolute;
    top: 10px;
    left: 10px;
}

.card-body {
    flex: 1;
    margin-left: 180px;
    font-size: 1.1rem;
}

.card-title {
    font-size: 2rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 15px;
}

.list-group-item {
    font-size: 1.2rem;
    color: #555;
    border: none;
    padding: 8px 0;
}

/* Bouton Supprimer centré en bas */
.form-buttons {
    display: flex;
    justify-content: center;
    width: 100%;
    margin-top: auto; /* Permet de positionner le bouton en bas */
}

.delete-icon {
    background-color: #e74c3c;
    color: white;
    border: none;
    padding: 12px;
    border-radius: 50%;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: background-color 0.3s ease, transform 0.2s ease;
    font-size: 1.5rem;
    cursor: pointer;
}

.delete-icon:hover {
    background-color: #c0392b;
    transform: scale(1.1);
}

/* Bouton Retour centré sous la carte */
.back-button-wrapper {
    width: 100%; /* Prend toute la largeur disponible */
    display: flex;
    justify-content: center;
    margin-top: -100px; /* Espacement pour le bouton retour */
}

.back-button {
    display: inline-flex;
    align-items: center;
    padding: 10px 20px;
    font-size: 1rem;
    color: white;
    background-color: #7f8c8d;
    border-radius: 50px;
    text-decoration: none;
    transition: all 0.3s ease;
    width: auto; /* Ajuste la taille en fonction du contenu */
    text-align: center;
}

.back-button:hover {
    background-color: white;
    color: #7f8c8d;
    text-decoration: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.back-button i {
    margin-right: 8px;
}

    /* Titre */
  .page-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50; /* Dark, elegant blue-gray */
        text-align: center;
        margin-bottom: 20px;
        border-bottom: 3px solid #3498db; /* Underline with a modern blue */
        display: inline-block;
        padding-bottom: 10px;
        text-transform: uppercase; /* Optional: Make text all uppercase */
        letter-spacing: 1px; /* Slightly increase spacing for a cleaner look */
    }

</style>