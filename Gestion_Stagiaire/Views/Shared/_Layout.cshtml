<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion_Stagiaire</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gestion_Stagiaire.styles.css" asp-append-version="true" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/image1.png" alt="Logo" class="navbar-logo" /> <!-- Remplacez 'image1.png' par le nom exact de votre fichier d'image -->
                    
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://www.wicmicgroup.com/">À Propos</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Stagiaires" asp-action="Index">Stagiaire</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DemandeStages" asp-action="Index">Demande Stage</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Type_Stage" asp-action="Index">Type des stages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Departements" asp-action="Index">Departement</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Status" asp-action="Index">Statut</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<!-- Footer -->
<footer class="footer bg-dark text-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <!-- Logo et nom de l'entreprise -->
            <div class="col-md-4 text-center text-md-start mb-4 mb-md-0">
                <img src="~/images/image1.png" alt="Logo" class="img-fluid mb-3" style="max-width: 150px;">
                <h5 class="text-uppercase">WicMic</h5>
                <p>Washing and Manufacturing International Company</p>
            </div>

            <!-- Informations sur l'entreprise -->
            <div class="col-md-4 mb-4 mb-md-0">
                <h5 class="text-uppercase mb-3">Informations de contact</h5>
                <p><i class="fas fa-map-marker-alt"></i> Route de Metline 7070 Rasjebel Bizerte</p>
                <p><i class="fas fa-phone"></i> Téléphone : +216 72 456 026</p>
                <p><i class="fas fa-envelope"></i> Email : <a href="mailto:contact@wic-sa.com" class="text-warning">contact@wic-sa.com</a></p>
            </div>

            <!-- Réseaux sociaux et liens rapides -->
            <div class="col-md-4 text-center text-md-end">
                <h5 class="text-uppercase mb-3">Suivez-nous</h5>
                <div class="d-flex justify-content-center justify-content-md-end">
                    <a href="https://www.facebook.com/wicmicgroup" target="_blank" class="text-light mx-2">
                        <i class="fab fa-facebook-f fa-2x"></i>
                    </a>
                    <a href="https://www.instagram.com/wicmicgroup/" target="_blank" class="text-light mx-2">
                        <i class="fab fa-instagram fa-2x"></i>
                    </a>
                    <a href="https://tn.linkedin.com/company/washing-international-company" target="_blank" class="text-light mx-2">
                        <i class="fab fa-linkedin fa-2x"></i>
                    </a>
                </div>
                <ul class="list-unstyled mt-3">
                    <li><a href="/internships" class="text-light">Explorer les Stages</a></li>
                    <li><a href="/admin" class="text-light">Gérer les Stages</a></li>
                    <li><a href="/register" class="text-light">S'inscrire</a></li>
                    <li><a href="/privacy" class="text-light">Politique de confidentialité</a></li>
                </ul>
            </div>
        </div>

        <div class="text-center mt-4">
            <p>&copy; 2025 - WicMic - Tous droits réservés.</p>
        </div>
    </div>
</footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>