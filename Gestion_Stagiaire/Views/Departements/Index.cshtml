@using DocumentFormat.OpenXml.Bibliography
@using DocumentFormat.OpenXml.Office2010.PowerPoint
@using Microsoft.CodeAnalysis.Differencing
@using Microsoft.VisualStudio.Web.CodeGenerators.Mvc.Templates.Blazor
@model IEnumerable<Gestion_Stagiaire.Models.Departement>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        
        <p>
            <a class="action-btn create-btn" asp-action="Create">Create New</a>
        </p>
        
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nom_Departement)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nom_Departement)</td>
                        <td>
                            <a class="action-btn" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="action-btn" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="action-btn" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
<!-- Intégration du CSS directement dans le fichier HTML -->
<style>
    /* Mise en page générale */


    /* Container centralisé */
    .container {
        width: 80%;
        margin: 0 auto;
        padding-top: 50px;
    }

    /* Titre */
    h1 {
        color: #2c3e50;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.5rem;
    }

    /* Tableau */
    table {
        width: 100%;
        margin: 0 auto;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background-color: #2c3e50;
        color: #fff;
    }

    th, td {
        padding: 15px;
        text-align: left;
        font-size: 1rem;
    }



    table {
        animation: fadeIn 1.5s ease-in-out;
    }

    /* Boutons animés */
    .action-btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 5px;
        background-color: #ff6f61; /* Couleur pastel douce */
        color: white;
        border-radius: 50px;
        text-decoration: none;
        font-weight: bold;
        text-align: center;
        transition: all 0.3s ease;
    }

        .action-btn:hover {
            background-color: #e74c3c; /* Effet de survol */
            transform: scale(1.1); /* Animation d'agrandissement */
        }

    /* Lien "Create New" */
    .create-btn {
        background-color: #f39c12;
        margin-top: 20px;
    }

        .create-btn:hover {
            background-color: #e67e22;
        }

</style>