@model IEnumerable<Gestion_Stagiaire.Models.Status>

@{
    ViewData["Title"] = "Gestion des Statuts";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>


        .container {
            margin-top: 20px;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 20px;
        }

        .form-inline1 {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: #ffffff;
            padding: 10px 15px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .form-inline1 input {
                flex: 1;
                margin-right: 10px;
                padding: 8px 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 14px;
            }

            .form-inline1 button {
                background-color: #2ecc71;
                color: white;
                border: none;
                padding: 8px 15px;
                border-radius: 4px;
                cursor: pointer;
                font-size: 14px;
            }

                .form-inline1 button:hover {
                    background-color: #27ae60;
                }

        .table-container {
            margin-top: 20px;
            background: #ffffff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            table th, table td {
                padding: 12px 15px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            table thead {
                background-color: #34495e;
                color: white;
            }

            table tbody tr:hover {
                background-color: #f1f1f1;
            }

        .action-icons {
            display: flex;
            gap: 10px;
        }

            .action-icons a {
                text-decoration: none;
                font-size: 20px;
                color: #3498db;
                transition: color 0.3s;
            }

                .action-icons a:hover {
                    color: #2c3e50;
                }

       

        /* Style des réponses de statuts */
        .status-reponse {
            font-weight: bold;
            font-size: 1.2rem;
            color: #2c3e50;
            font-style: italic;
            text-transform: capitalize; /* Mise en majuscule des premières lettres */
            letter-spacing: 1px; /* Espacement entre les lettres */
        }

        /* Bouton Ajouter comme icône */
        .create-btn1 {
            background-color: #2ecc71;
            padding: 10px 15px;
            font-size: 0.5rem;
            text-align: center;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: inline-block;
            text-decoration: none;
            color: white;
            font-weight: bold;
            margin-top: 10px;
            transition: all 0.3s ease;
        }

            .create-btn1 i {
                font-size: 1.8rem;
            }

            .create-btn1:hover {
                background-color: #27ae60;
            }

                                .page-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50; /* Dark, elegant blue-gray */
        text-align: center;
        margin-bottom: 20px;
        border-bottom: 3px solid #3498db; /* Underline with a modern blue */
        display: inline-block;
        padding-bottom: 10px;
        text-transform: uppercase; /* Optional: Make text all uppercase */
        letter-spacing: 1px; /* Slightly increase spacing for a cleaner look */
    }

    </style>
    <!-- Ajout d'une icône FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <!-- Formulaire pour créer un statut -->
        <div class="form-container mb-4">
            <h1 class="page-title">@ViewData["Title"]</h1>
            <form asp-action="Create">
                <div class="mb-3">
                    <input type="text" class="form-control" id="Reponse" name="Reponse" placeholder="Saisir la réponse">
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Ajouter
                </button>
            </form>
        </div>

        <!-- Tableau des statuts -->
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Réponse</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="status-reponse">@Html.DisplayFor(modelItem => item.Reponse)</td>
                            <td class="action-icons">
                                <a asp-action="Edit" asp-route-id="@item.Id" title="Modifier"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" title="Supprimer"><i class="fas fa-trash"></i></a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</body>
</html>