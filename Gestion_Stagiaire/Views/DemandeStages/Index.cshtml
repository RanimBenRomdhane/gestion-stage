@model IEnumerable<Gestion_Stagiaire.Models.DemandeStage>

@{
    ViewData["Title"] = "Index";
}

<h1>Demande de stage</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="ExportToExcel" class="btn btn-success">Export to Excel</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Stagiaire
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type_Stage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Debut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Fin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Demande Stage
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Demande)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Affectation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commentaire)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Stagiaire.Nom @item.Stagiaire.Prenom
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type_Stage)
                </td>
                <td>
                    @item.Date_Debut.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.Date_Fin.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Path_Demande_Stage))
                    {
                        <a href="~/uploads/demandes/@item.Path_Demande_Stage" target="_blank">Voir la Demande de Stage</a>
                    }
                    else
                    {
                        <p>Aucune demande de stage disponible</p>
                    }
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Demande)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Affectation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Commentaire)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>