@model Gestion_Stagiaire.Models.DemandeStage

@{
    ViewData["Title"] = "Confirmation de Suppression";
}

<h1 class="page-title">Suppression de la Demande de Stage</h1>

<div class="container">
    <div class="row justify-content-center">
        <!-- Carte de gauche : Informations de la demande de stage -->
        <div class="col-md-5 mb-4">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <!-- Titre centré -->
                    <h5 class="mb-0">Confirmation de Suppression</h5>
                </div>
                <div class="card-body">
                    <!-- Contenu à gauche -->
                    <dl class="row">
                        <div class="col-12 d-flex align-items-center">
                            <dt class="col-sm-5">Nom et Prénom</dt>
                            <dd class="col-sm-7">@Model.Stagiaire.Nom @Model.Stagiaire.Prenom</dd>
                        </div>

                        <div class="col-12 d-flex align-items-center">
                            <dt class="col-sm-5">Type de Stage</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.Type_Stage.Stage_Type)</dd>
                        </div>

                        <div class="col-12 d-flex align-items-center">
                            <dt class="col-sm-5">Date de Début</dt>
                            <dd class="col-sm-7">@Model.Date_Debut.ToString("yyyy-MM-dd")</dd>
                        </div>

                        <div class="col-12 d-flex align-items-center">
                            <dt class="col-sm-5">Date de Fin</dt>
                            <dd class="col-sm-7">@Model.Date_Fin.ToString("yyyy-MM-dd")</dd>
                        </div>

                        <div class="col-12 d-flex align-items-center">
                            <dt class="col-sm-5">Demande de Stage</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.Path_Demande_Stage))
                                {
                                    <a href="~/uploads/demandes/@Model.Path_Demande_Stage?timestamp=@DateTime.Now.Ticks" target="_blank">Voir la Demande</a>
                                }
                                else
                                {
                                    <p>Aucune demande disponible</p>
                                }
                            </dd>
                        </div>

                        <div class="col-12 d-flex align-items-center">
                            <dt class="col-sm-5">Rapport de stage</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.Path_Rapport))
                                {
                                    <a href="~/uploads/demandes/@Model.Path_Rapport?timestamp=@DateTime.Now.Ticks" target="_blank">Voir le Rapport</a>
                                }
                                else
                                {
                                    <p>Aucun rapport disponible</p>
                                }
                            </dd>
                        </div>

                        <div class="col-12 d-flex align-items-center">
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Commentaire)</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(model => model.Commentaire)</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <!-- Formulaire de suppression -->
        <div class="col-md-5 mb-4">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group text-center">
                    <!-- Ajoutez text-center ici pour centrer le bouton -->
                    <button type="submit" class="delete-icon" title="Supprimer">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>
<!-- Bouton Retour centré sous la carte -->
<div class="back-button-wrapper">
    <a asp-action="Index" class="back-button">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>
</div>

<style>
    /* Titre */
    .page-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50;
        text-align: center;
        margin-bottom: 20px;
        border-bottom: 3px solid #e74c3c; /* Red underline for deletion */
        display: inline-block;
        padding-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }



    .card-header {
        text-align: center;
        font-size: 1.25rem;
    }

    .card-body {
        padding: 20px;
    }

    .btn {
        font-weight: bold;
    }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #c0392b;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #e74c3c;
        }

    .btn-secondary {
        background-color: #7f8c8d;
        border-color: #95a5a6;
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            border-color: #7f8c8d;
        }

    .container {
        padding-top: 20px;
    }

    .delete-icon {
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 12px;
        border-radius: 50%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s ease, transform 0.2s ease;
        font-size: 1.5rem;
        cursor: pointer;
        margin: 0 auto; /* Assurez-vous que le bouton est centré */
        display: block; /* Nécessaire pour que margin:auto fonctionne */
        margin-top:-70px; /* Un peu d'espace avant le bouton */
    }

        .delete-icon:hover {
            background-color: #c0392b;
            transform: scale(1.1);
        }

    .row {
        margin-bottom: 20px; /* Un peu d'espace sous la carte */
    }

    .back-button-wrapper {
        width: 100%;
        display: flex;
        justify-content: center;
        margin-top: -70px; /* Un peu d'espace avant le bouton retour */
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        padding: 10px 20px;
        font-size: 1rem;
        color: white;
        background-color: #7f8c8d;
        border-radius: 50px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background-color: white;
            color: #7f8c8d;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .back-button i {
            margin-right: 8px;
        }


</style>
