@model Gestion_Stagiaire.Models.DemandeStage

@{
    ViewData["Title"] = "Suppression";
}

<h1>Confirmation de Suppression</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette Demande de Stage ?</h3>

    <div>
        <h4>Demande de Stage</h4>
        <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Stagiaire
        </dt>
        <dd class="col-sm-10">
            @Model.Stagiaire.Nom @Model.Stagiaire.Prenom
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type_Stage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type_Stage.Stage_Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_Debut)
        </dt>
        <dd class="col-sm-10">
            @Model.Date_Debut.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_Fin)
        </dt>
        <dd class="col-sm-10">
            @Model.Date_Fin.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.Reponse)
        </dd>
        <dt class="col-sm-2">
            Demande de Stage
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Path_Demande_Stage))
            {
                <a href="~/uploads/demandes/@Model.Path_Demande_Stage" target="_blank">Voir la Demande de Stage</a>
            }
            else
            {
                <p>Aucune demande de stage disponible</p>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_Demande)
        </dt>
        <dd class="col-sm-10">
            @Model.Date_Demande.ToString("yyyy-MM-dd HH:mm:ss")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departement)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departement.Nom_Departement)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Encadrant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Encadrant)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titre_Projet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titre_Projet)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Path_Rapport)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Path_Rapport))
            {
                <a href="~/uploads/demandes/@Model.Path_Rapport" target="_blank">Voir le Rapport de Stage</a>
            }
            else
            {
                <p>Aucun Rapport de stage disponible</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commentaire)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commentaire)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Supprimer</button> |
            <a class="btn btn-secondary" href="@Url.Action("Index")">Retour à la liste</a>
        </div>
    </form>
</div>
